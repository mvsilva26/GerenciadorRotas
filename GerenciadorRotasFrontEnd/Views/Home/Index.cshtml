@using Microsoft.AspNetCore.Http
@model GerenciadorRotasFrontEnd.Models.Usuario

@{
    ViewData["Title"] = "Login Usuário";
}

@if (@ViewBag.Authenticate)
{
	<div class="row">
		<div class="col-md-2">
			<h5>Olá, @ViewBag.User!</h5>
		</div>
	</div>
	<form asp-controller="Usuarios" asp-action="Logout">
		<div class="form-group">
					<input type="submit" value="Sair" class="btn btn-primary" />
				</div>
	</form>
	<br />
}else
{
	<h1>Login</h1>

	<hr />
	<div class="row">
		<div class="col-md-4">
			<form asp-controller="Usuarios" asp-action="Login">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group">
					<label asp-for="LoginUser" class="control-label"></label>
					<input asp-for="LoginUser" class="form-control" />
					<span asp-validation-for="LoginUser" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Senha" class="control-label"></label>
					<input asp-for="Senha" class="form-control" type="password" />
					<span asp-validation-for="Senha" class="text-danger"></span>
				</div>

				<div class="form-group">
					<input type="submit" value="Entrar" class="btn btn-primary" />
				</div>
			</form>
		</div>
	</div>
}
@section Scripts {
    @{
	await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
